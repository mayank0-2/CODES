Question :-  https://codeforces.com/problemset/problem/71/A

Solution :-  

#include<bits/stdc++.h>
using namespace std;

int solve(string a) {
    int len = a.length();
    // cout << len;
    if(len <= 10) {
        cout << a << "\n";
    } else {
        cout << a[0] << len - 2 << a[len - 1] << "\n";
    }
    return 0;
}

int main(void) {
    int n;
    string a;
    cin >> n;
    for (int i = 0; i < n; i ++) {
        cin >> a;
        solve(a);
    }
    return 0;
}
