Question :-   https://codeforces.com/problemset/problem/1511/A

Solution :-     

#include<bits/stdc++.h>
using namespace std;
int main(void) {
    ios :: sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);

    int t, n;
    cin >> t;
    while (t --) {
        cin >> n;
        int a[n], up = 0;
        for (int i = 0; i < n; i ++)    {
            cin >> a[i];
            if (a[i] == 1 || a[i] == 3)     up ++;
        }
        cout << up << "\n";
    }
    return 0;
}
