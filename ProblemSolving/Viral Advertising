import java.util.Scanner;

public class solution {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int n = in.nextInt();
        int like, sum = 0;
        for (int i = 0, base = 5; i < n; i ++) {
            like = base/2;
            sum += like;
            base = 3 * like;
        }
        System.out.println(sum);
    }
}
