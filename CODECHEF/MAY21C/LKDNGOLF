Question :-   https://www.codechef.com/MAY21C/problems/LKDNGOLF
Solution :-     

#include<bits/stdc++.h>
using namespace std;
int main(void) {
    ios_base :: sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);

    int t, n, x, k;
    cin >> t;
    while (t --) {
        cin >> n >> x >> k;
        int flag = 1;
        if (x % k == 0 || (n + 1 - x) % k == 0) {
            cout << "YES\n";
        } else {
            cout << "NO\n";
        }
    }
    return 0;
}
